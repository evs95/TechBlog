<form class="form" id="update-post-form">
      <div class="form-group">
        <h3>Edit Post</h3>
      </div>
      <div class="form-group editBlogId" id="{{blog.id}}">
        <label for="title">Title:</label>
        <input class="form-input" type="text" value="{{blog.Title}}" id="up-title-txt" />
      </div>
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-input" id="up-content-txt">{{blog.Content}}</textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="post-update">Update</button>
        <button class="btn btn-primary" id="post-delete">Delete</button>
      </div>
</form>